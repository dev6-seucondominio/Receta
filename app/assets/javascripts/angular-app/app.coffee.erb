angular.module "receita", [
  'ngRoute', 'ngResource'
]

.config [
  '$routeProvider', '$locationProvider', '$resourceProvider'
  ($routeProvider, $locationProvider, $resourceProvider) ->

    $routeProvider
      .when '/',
        templateUrl: "<%= asset_path("Home/index") %>"
        controller: 'Home::IndexCtrl'
      .when '/home',
        templateUrl: "<%= asset_path("Home/index") %>"
        controller: 'Home::IndexCtrl'

    $locationProvider.html5Mode
      enabled: true
      requireBase: false
]

.controller 'controll', [
  '$scope', '$filter'
  ($scope, $filter)->

    $scope.recipes = [
      {
        id: 1
        name: 'Baked Potato w/ Cheese'
      }
      {
        id: 2
        name: 'Garlic Mashed Potatoes'
      }
      {
        id: 3
        name: 'Potatoes Au Gratin'
      }
      {
        id: 4
        name: 'Baked Brussel Sprouts'
      }
    ]
]
